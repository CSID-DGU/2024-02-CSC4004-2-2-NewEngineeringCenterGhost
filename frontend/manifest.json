{
  "manifest_version": 3,
  "name": "낚시성 정보 탐지 도구",
  "version": "1.0",
  "description": "낚시성 정보를 탐지하고 확률 및 해설을 제공합니다.",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js",
        "popup.js"
      ]
    }
  ]
}

